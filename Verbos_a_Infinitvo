tupla_verbos = tuple( zip (verbos_infinitivo_lista, verbos_futuro_lista, verbos_pasado_lista, verbos_presente_lista))
 
print(tupla_verbos)

def buscar_infinitivo(verbo):
    for i in tupla_verbos:
        for a in i:
            if a == verbo:
                print(i[0])

#x = input("Escriba un verbo: ")
buscar_infinitivo("abandona")
