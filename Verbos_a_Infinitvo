verbos = open("verbos_infinitivo.txt","r")

lista_verbos = []
for line in verbos:
    lista_verbos.append(line)
        
    #print(lista_verbos)
    
for i in lista_verbos:
    if i == "\n":
        lista_verbos.remove(i)
            
    #print(lista_verbos) 
    
verbos_infinitivo_lista = []
    
for i in lista_verbos:
    v = str(i)
    h = v.rstrip("\n")
    verbos_infinitivo_lista.append(h)
    
