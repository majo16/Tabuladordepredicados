    elif i[-3:l] == "iar":
        x = i[:-3] + "ía"
        verbos_presente_lista.append(x)    
        
    elif i[-3:l] == "uar":
        x = i[:-3] + "úa"
        verbos_presente_lista.append(x)
        
    elif i[-2:l] == "ar":
        x = i[:-2] + "a"
        verbos_presente_lista.append(x)
        
    elif i[-2:l] == "er":
        x = i[:-2] + "e"
        verbos_presente_lista.append(x)
    
    elif i[-2:l] == "ir":
        x = i[:-2] + "e"
        verbos_presente_lista.append(x)
        
    else:
        verbos_presente_lista.append("N/A")

